{
  "name": "waai",
  "version": "1.0.0",
  "description": "Angular Generic Architecture & Dynamic Form Library with RTL/LTR support",
  "keywords": [
    "angular",
    "generic-architecture",
    "dynamic-form",
    "reactive-forms",
    "rtl",
    "ltr",
    "typescript",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --configuration development",
    "start:staging": "ng serve --configuration staging",
    "start:prod": "ng serve --configuration production",
    "build": "ng build",
    "build:dev": "ng build --configuration development",
    "build:staging": "ng build --configuration staging",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:waai": "node dist/waai/server/server.mjs",
    "build:lib": "ng build dynamic-form",
    "build:lib:dev": "ng build dynamic-form --configuration development",
    "build:lib:prod": "ng build dynamic-form --configuration production",
    "watch:lib": "ng build dynamic-form --watch --configuration development",
    "test:lib": "ng test dynamic-form",
    "test:lib:coverage": "ng test dynamic-form --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\" \"projects/**/*.{ts,html,scss}\"",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules package-lock.json"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "19.2.14",
    "@angular/compiler": "19.2.14",
    "@angular/core": "19.2.14",
    "@angular/forms": "19.2.14",
    "@angular/platform-browser": "19.2.14",
    "@angular/platform-browser-dynamic": "19.2.14",
    "@angular/platform-server": "19.2.14",
    "@angular/router": "19.2.14",
    "@angular/ssr": "19.2.15",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@ngxs/devtools-plugin": "^19.0.0",
    "@ngxs/logger-plugin": "^19.0.0",
    "@ngxs/store": "^19.0.0",
    "express": "^4.21.2",
    "rxjs": "7.8.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.15",
    "@angular/cli": "19.2.15",
    "@angular/compiler-cli": "19.2.14",
    "@types/express": "4.17.21",
    "@types/jasmine": "5.1.8",
    "@types/node": "18.19.64",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "5.9.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ng-packagr": "^19.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.7.3"
  }
}
